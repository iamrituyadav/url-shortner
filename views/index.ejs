<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    
  </head>
  <body>
    <div id="main">
      <h1>URL Shortner</h1>
      <form action="/shortUrls" method="POST">
        <label for="longUrl">Url</label>
        <input type="url" name="longUrl" id="longUrl" placeholder="Enter URL" />
        <button type="submit">Short</button>
      </form>

      <table class="table">
        <thead>
          <tr>
            <th>Long url</th>
            <th>Short url</th>
          </tr>
        </thead>

        <tbody>
          <% shortUrls.forEach(shortUrl => {%>
          <tr>
            <td><a href="<%= shortUrl.long %>"></a><%= shortUrl.long %></td>
            <td>
              <a href="<%= shortUrl.short %>"><%= shortUrl.short%></a>
            </td>
          </tr>

          <%}) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
